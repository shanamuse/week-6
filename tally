#include <stdio.h>

int main() {
    int sum = 0;
    int number;
    
    printf("Enter a number (0 to quit):\n");
    
    while (1) {
        scanf("%d", &number);
        
        if (number == 0) {
            break; 
        }
        
        sum += number; 
        printf("Enter a number (0 to quit):\n");
    }
    
    printf("\nThe tally is: %d\n", sum);
    
    return 0;
}
